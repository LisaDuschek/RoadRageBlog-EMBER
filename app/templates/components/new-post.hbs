{{yield}}

{{#if addNewPost}}
  <h2 id="newPostHead">New Post</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Article Title</label>
        {{input value=title id="title" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="text">Article:</label>
        <textarea class="form-control" rows="3" id="textArea">{{input value=text id="text"}}</textarea>

      </div>

      <div class="form-group">
        <label for="image">Image Link</label>
        {{input value=image id="image" class="form-control"}}
      </div>

      <button class="btn btn-submit" {{action 'save'}}>Publish Post</button>
    </form>
  </div>
{{else}}
  <button {{action 'articleFormShow'}}>New Post</button>
{{/if}}
