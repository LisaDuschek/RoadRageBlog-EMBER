{{yield}}

{{#if addNewComment}}
  <h2 id="newPostHead">New Comment</h2>
  <div>
    <form>

      <div class="form-group">
        <label for="username">Username</label>
        {{input value=username id="username" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="content">Comment:</label>
        {{textarea class="form-control" rows="3" id="textArea" value=content id="content"}}
      </div>

      <button class="btn btn-submit" {{action 'saveComment'}}>Save Comment</button>
    </form>
  </div>
{{else}}
  <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
