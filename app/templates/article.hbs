{{outlet}}

<h2>{{model.title}} by {{model.author}}</h2>

<p>{{model.text}}</p>

{{#each model.comments as |comment|}}
  <h2>{{comment.username}}</h2>
  <p>{{comment.content}}</p>
  <button {{action 'deleteComment' comment}}>Delete</button>
  {{update-comment updateCommentForm="updateCommentForm" comment=comment updateComment="updateComment"}}
{{/each}}

{{new-comment model=model saveComment="saveComment" }}
